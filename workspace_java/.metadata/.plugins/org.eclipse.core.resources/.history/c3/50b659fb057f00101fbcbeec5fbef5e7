<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
    
<%-- jstl core --%>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core" %>


<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
</head>
<body>
<h1>JSTL</h1>
<% int a = 0;%>
<c:set var="a" value = "10"/>   <!-- 자바 변수로 바로 등록이 됨 -->

\${a } : ${a }<br>
<%
	String name = "HUMAN";

%>  
<%-- <c:set var = name2  value = "<%= name %>"> </c:set>      --%>
<%-- \${name2 } : ${name2}<br> --%>

<%-- <c:set var = name3 value = "${a}"> </c:set>   --%>
<!-- <!-- 스코프 생략하면 page 스코프가 되는거고  -->    -->
<%-- \${name3 } : ${name3}<br> --%>
<hr>
scope : page > request > session > application<br>

<c:set var = "game"  value = "LOL" scope = "page"> </c:set> 
<c:set var = "game"  value = "마비노기" scope = "request"> </c:set> 
<c:set var = "game"  value = "서든어택" scope = "session"> </c:set> 
<c:set var = "game"  value = "세븐나이츠" scope = "application"> </c:set> 
\${ game } : ${ game }<br>  
requestScope : ${pageScope.game}<br> 


</body>
</html>