package movieController;

import java.io.IOException;
import java.util.ArrayList;
import java.util.List;

import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import emp.dto.EmpDTO;
import emp.service.EmpService;
import movieDTO.movieDTO;
import movieService.movieService;

/**
 * Servlet implementation class movieRemoveController
 */
@WebServlet("/remove")
public class movieRemoveController extends HttpServlet {
	private static final long serialVersionUID = 1L;
       
    /**
     * @see HttpServlet#HttpServlet()
     */
    public movieRemoveController() {
        super();
        // TODO Auto-generated constructor stub
    }

	/**
	 * @see HttpServlet#doGet(HttpServletRequest request, HttpServletResponse response)
	 */
	protected void doGet(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		System.out.println("remove ctrol get 실행");
		
//		1. 어떤 녀석을 삭제 하는가. 체크박스를 만들고 그 체크박스에 체크가 된 목록을 삭제 시키자
		
//		System.out.println(chk.length);
//		System.out.println(chk[0]);
//		System.out.println(chk[1]);
//		System.out.println(chk[2]);
		movieService movieService = new movieService();

		try {
			//데이터를 삭제하는 메소드를 만들고 오자
			String code [] = request.getParameterValues("chk");
			int code_int;
			for(int i = 0; i<code.length;i++) {
				code_int = Integer.parseInt(code[i]);
				movieDTO movieDTO = new movieDTO();
				movieDTO.setCode(code_int);
				int result = movieService.removemovies(movieDTO);
				System.out.println(result +" 만큼 삭제 됐습니다");
			
			}

		
			
			

			
			// 4. 전체목록 페이지 표시
			response.sendRedirect("view");
			
			
		
			
			
			
		} catch(Exception e) {
			e.printStackTrace();
		}
		
;
		
		
//		2. 그럼 먼저 체크된 목록의 값을 불러와야 한다. 그 값은 code변수로 구분하자.
//		체크된 목록이 여러개일경우를 가정하여 list값으로 밪자
		
		
//		3. 그후 DTO에 값을 담아주자.
//		4. DB로 보내고
//		5. 가져오자
		
	}

	/**
	 * @see HttpServlet#doPost(HttpServletRequest request, HttpServletResponse response)
	 */
	protected void doPost(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {

	}

}
